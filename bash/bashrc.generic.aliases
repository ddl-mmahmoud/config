#!/bin/bash -x

alias less="less -R"
alias ls="ls -N --color=auto --sort=time"
alias ll="ls -lrt"
alias grep="grep -P"
alias head="head -n20"
alias cls="clear && echo -n "@" && pwd && ls"
alias x="exit"
alias ..="cd .."
alias ...="cd ../.."
alias g="git"
alias kc="kubectl"
alias sshh="ssh -oPubkeyAuthentication=no -oStrictHostKeyChecking=no -oUserKnownHostsFile=/dev/null"
alias cut="cut -d' '"
